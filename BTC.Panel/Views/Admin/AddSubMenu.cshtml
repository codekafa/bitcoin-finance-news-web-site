            <li onclick="getPageUrls('content-page',5)" ><a data-toggle="tab"  data-id="5" href="#content-page">İçerikler</a></li>
            <li onclick="getPageUrls('post-page',6)"  ><a data-toggle="tab" data-id="6" href="#post-page">Yazılar</a></li>
            <li onclick="getPageUrls('member-page',7)"  ><a data-toggle="tab" data-id="7" href="#member-page">Üyeler</a></li>
        </ul>

        <div class="tab-content">
            <div id="category-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="writer-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="supplier-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="page-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="content-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="post-page" class="tab-pane fade in col-md-12">
            </div>
            <div id="member-page" class="tab-pane fade in col-md-12">
            </div>
        </div>
    </div>
    <div id="static-page" class="tab-pane fade in">

        @Html.Action("_GetStaticPages")

    </div>
</div>



<div id="getPagesBySearchKey">

</div>




<div class="col-md-12">
    <div id="subMenuDiv">
        @Html.Action("_GetSubMenus", new { menu_id = ViewBag.MenuID })
    </div>
</div>


