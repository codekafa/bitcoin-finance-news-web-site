@model List<BTC.Model.Entity.UserProducts>


@if (Model.Count > 0)
{
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Oluşturma Tarihi</th>
                <th>Yayında mı?</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CreateDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (item.IsPublish)
                        {
                            <i class="fa fa-check-circle">Aktif</i>
                        }
                        else
                        {
                            <i class="fa fa-remove">Pasif</i>
                        }
                    </td>
                    <td>
                        @if (item.IsPublish)
                        {
                            <button class="btn btn-xs btn-danger" type="button" onclick="PublishProduct(@item.ID)"> <i class="fa fa-remove"></i></button>
                        }
                        else
                        {
                            <button class="btn btn-xs btn-success" type="button" onclick="UnPublishProduct(@item.ID)"> <i class="fa fa-check-circle"></i></button>
                        }

                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
<div class="col-md-12"><div class="form-group"> <label class="alert alert-warning">Ürün buluanmadı!</label></div></div>
}



