
@using BTC.Model.View
@model List<PostModel>


<h2>Makaleler</h2>
<table id="userListTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Yazar</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>Gösterim</th>
            <th>Yayın</th>
            <th>Aktif</th>
            @*<th>Onaylı</th>*@
        </tr>
    </thead>
    <tbody id="usersListBody">

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Writer</td>
            <td>@item.Title</td>
            <td>@item.Category</td>
            <td>@item.CreateDate.ToLongDateString() @item.CreateDate.ToLongTimeString()</td>
            <td>@item.ViewCount</td>
            <td>
                <input type="checkbox" class="form-control is_publish" user-id="@item.ID" @(item.IsPublish ? "checked" : "") />
            </td>
            <td>
                <input type="checkbox" class="form-control is_active" user-id="@item.ID" @(item.IsActive ? "checked" : "") />
            </td>
        </tr>
        }

    </tbody>
</table>