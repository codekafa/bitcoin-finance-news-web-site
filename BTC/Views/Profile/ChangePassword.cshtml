@using BTC.Model.View
@model PasswordChangeModel
@{
    ViewBag.Title = "Şifre Güncelleme";
   ViewBag.SelectPage = "sifre";
}


<div class="container box-content-info">
    <div class="container-fluid container-top-padding">
        <div class="col-md-12">
            <form name="passwordForm" class="profile-form" method="POST" autocomplete="off">
                <div class="login-main-form">

                    <div class="form-group col-12 col-lg-12">
                        <input id="OldPassword" class="form-control" autocomplete="off" name="OldPassword" placeholder="Mevcut Şifreniz" type="password" required="">
                    </div>


                    <div class="form-group col-12 col-lg-12">
                        <input id="Password" class="form-control" autocomplete="off" name="Password" placeholder="Yeni Şifreniz" type="password" required="">
                    </div>
                    <div class="form-group col-12 col-lg-12">
                        <input id="PasswordAgain" class="form-control" autocomplete="off" name="PasswordAgain" placeholder="Yeni Şifreniz Tekrar" type="password" required="">
                    </div>

                        <button class="btn btn-primary" type="button" onclick="changePassword()">Kaydet</button>

                </div>
            </form>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/js/user-operation")
