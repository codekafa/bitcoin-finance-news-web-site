@using BTC.Model.View
@model List<PostModel>

@{
    PostFilterModel filter = ViewBag.Filter as PostFilterModel;
}


@if (Model.Count == 0)
{
    <div class="form-group">
        <label class="alert alert-warning form-control" style="    padding-bottom: 30px;">Makale Bulunamadı!</label>
    </div>
}

@foreach (var item in Model)
{
    <div class="box-comment box-blog">

        <div class="gdlr-core-zoom-on-hover" style="max-height:300px; max-width:800px">
            <img src="~/Images/_post/large/@item.TopPhotoUrl" class="response img-responsive" alt="" style="height:100%;width:100%" />
        </div>
        <div class="info-blog">
            <i class="far fa-clock"></i>
            <span>@item.CreateDate.ToShortDateString()</span>
            <i class="fas fa-user-tie"></i>
            <span>@item.Writer</span>
            <i class="far fa-eye"></i>
            <span>@item.ViewCount</span>
        </div>
        <h3>@item.Title</h3>
        <p style="word-wrap: break-word;">
            @item.Summary
        </p>
        <a href="/blog-detay/@item.Uri" target="_blank" class="btn btn-more">Devamı...</a>
    </div>
}
