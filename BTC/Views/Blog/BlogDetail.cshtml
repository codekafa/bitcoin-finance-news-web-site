@using BTC.Model.View
@{
    ViewBag.Title = Model.Title;
    ViewBag.SelectPage = "makaleler";
}
@model PostModel

<div class="feed-content blog-single">
    <div class="box-single-img">
        <div class="gr-back"></div>
        <div class="container info-blog">
            <div class="row">
                <div class="col-md-12">
                    <i class="far fa-clock"></i>
                    <span>@Model.CreateDate.ToShortDateString()</span>
                    <i class="fas fa-user-tie"></i>
                    <span>@Model.Writer</span>
                    <i class="far fa-eye"></i>
                    <span>@Model.ViewCount</span>
                    <h3>@Model.Title</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="container content-single-art">
        <div class="row">

            <div class="col-md-8 box-blog-single">
                <div class="box-article">

                   @Html.Raw(Model.Body)
                </div>

                <div class="box-comment">
                    <div class="comments-author">
                        <img src="assets/images/avatar.png" />
                    </div>
                    <div class="author">
                        <h3>@Model.Writer</h3>
                        <p>
                           @Model.Writer
                        </p>
                    </div>
                    <div class="response">
                        <p class="txt-response">Yorumlar</p>

                        <div class="row comment">
                            <div class="col-md-2">
                                <img src="assets/images/avatar.png" />
                            </div>
                            <div class="col-md-10">
                                <h3>Richard Boe</h3>
                                <a href="#">
                                    <time datetime="2016-11-26T15:04:44+00:00"> November 26, 2016 at 3:04 pm </time>
                                </a>
                                <p class="response-art">
                                    Maecenas sed diam eget risus varius blandit sit amet non magna. Fusce dapibus,
                                    tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo
                                    sit amet risus.
                                </p>
                            </div>
                        </div>

                        <div class="row comment">
